<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
</head>

<body>
  <%- include ("../partials/nav.ejs") %>
  <div class="container">
  <h1>RECTANGLE LIST</h1>
  <table id ="rectangleList">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Color</th>
    </tr>
    <% results.forEach(function(r) { %>
      <td></td>
      <td><a href="/test/" + <%= r.id %>><%= r.name %></a></td>
      <td><%= r.color %></td>
    </tr>
  <% }); %>
  </table>
  <button><a href="/add">Add a new rectangle</a></button>
  <button><a href="/view">See rectangle details</a></button>
  </div>
</body>
</html>
